<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- action -->
	<bean name="itemAction" class="com.jike.mobile.browser.extension.ItemAction" scope="prototype">
	   <property name="extensionService"><ref bean="extensionService" /></property>
	</bean>
	
	<bean name="categoryAction" class="com.jike.mobile.browser.extension.CatAction" scope="prototype">
       <property name="extensionService"><ref bean="extensionService" /></property>
    </bean>
	
	<!-- service -->
	<!-- scope="singleton" -->
    <bean name="extensionService" class="com.jike.mobile.browser.extension.ExtensionServiceImpl" scope="prototype">
        <property name="itemDao"><ref bean="itemDao" /></property>
        <property name="categoryDao"><ref bean="categoryDao" /></property>
    </bean>
    
</beans>












